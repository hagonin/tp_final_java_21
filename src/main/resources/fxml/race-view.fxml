<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.digi.d202508.tp_final_java21.controller.RaceController">
   <top>
      <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
         <HBox alignment="CENTER" spacing="20">
            <Label text=" Course d'Animaux - Interface Graphique 🏁" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
         </HBox>
         
         <HBox alignment="CENTER" spacing="30">
            <VBox spacing="10">
               <Label text="Configuration:" style="-fx-font-weight: bold;" />
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Nombre de manches:" />
                  <Spinner fx:id="roundsSpinner" prefWidth="80" />
               </HBox>
               <CheckBox fx:id="useRefereeCheckBox" text="Utiliser l'arbitre en direct" />
            </VBox>
            
            <VBox spacing="10">
               <Label text="Actions:" style="-fx-font-weight: bold;" />
               <Button fx:id="startRaceButton" text=" Démarrer Course Simple" onAction="#startSingleRace"
                       style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px;" />
               <Button fx:id="startTournamentButton" text=" Démarrer Tournoi" onAction="#startTournament"
                       style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px;" />
            </VBox>
         </HBox>
         
         <Label fx:id="raceStatusLabel" text="Prêt à commencer" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      </VBox>
   </top>
   
   <center>
      <HBox spacing="20" style="-fx-padding: 20;">
         <!-- Race Track -->
         <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-padding: 15;" HBox.hgrow="ALWAYS">
            <Label text=" Piste de Course" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <VBox fx:id="raceTrackContainer" spacing="12" />
         </VBox>
         
         <!-- Speed Indicators Panel -->
         <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-padding: 15;" prefWidth="300">
            <Label text="⚡ Indicateurs de Vitesse" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            
            <!-- Tortue Speed Indicator -->
            <VBox spacing="5" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
               <Label text="🐢 Tortue" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Circle fx:id="tortueStateCircle" radius="8" fill="lightgray" />
                  <Label fx:id="tortueStateLabel" text="—" style="-fx-font-weight: bold; -fx-font-size: 12px;" minWidth="80" />
               </HBox>
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Vitesse:" />
                  <ProgressBar fx:id="tortueSpeedBar" prefWidth="100" prefHeight="20" />
                  <Label fx:id="tortueSpeedLabel" text="0.0 km/h" style="-fx-font-size: 12px;" />
               </HBox>
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Position:" />
                  <Label fx:id="tortuePositionLabel" text="0.0 m" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
               </HBox>
            </VBox>
            
            <!-- Lapin Speed Indicator -->
            <VBox spacing="5" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
               <Label text="🐰 Lapin" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Circle fx:id="lapinStateCircle" radius="8" fill="lightgray" />
                  <Label fx:id="lapinStateLabel" text="—" style="-fx-font-weight: bold; -fx-font-size: 12px;" minWidth="80" />
               </HBox>
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Vitesse:" />
                  <ProgressBar fx:id="lapinSpeedBar" prefWidth="100" prefHeight="20" />
                  <Label fx:id="lapinSpeedLabel" text="0.0 km/h" style="-fx-font-size: 12px;" />
               </HBox>
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Position:" />
                  <Label fx:id="lapinPositionLabel" text="0.0 m" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
               </HBox>
            </VBox>
            
            <!-- Cheval Speed Indicator -->
            <VBox spacing="5" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
               <Label text="🐴 Cheval" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Circle fx:id="chevalStateCircle" radius="8" fill="lightgray" />
                  <Label fx:id="chevalStateLabel" text="—" style="-fx-font-weight: bold; -fx-font-size: 12px;" minWidth="80" />
               </HBox>
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Vitesse:" />
                  <ProgressBar fx:id="chevalSpeedBar" prefWidth="100" prefHeight="20" />
                  <Label fx:id="chevalSpeedLabel" text="0.0 km/h" style="-fx-font-size: 12px;" />
               </HBox>
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Position:" />
                  <Label fx:id="chevalPositionLabel" text="0.0 m" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
               </HBox>
            </VBox>
            
            <!-- Legend -->
            <VBox spacing="8" style="-fx-background-color: #fff3cd; -fx-border-color: #ffeaa7; -fx-border-radius: 5; -fx-padding: 12;">
               <Label text=" Légende des États:" style="-fx-font-weight: bold; -fx-font-size: 13px;" />
               <HBox spacing="8" alignment="CENTER_LEFT">
                  <Circle radius="6" fill="#4CAF50" />
                  <Label text=" BOOST! - Vitesse &gt; 120%" style="-fx-font-size: 11px;" />
               </HBox>
               <HBox spacing="8" alignment="CENTER_LEFT">
                  <Circle radius="6" fill="#2196F3" />
                  <Label text="️ Normal - Vitesse normale" style="-fx-font-size: 11px;" />
               </HBox>
               <HBox spacing="8" alignment="CENTER_LEFT">
                  <Circle radius="6" fill="#F44336" />
                  <Label text=" Fatigue - Vitesse &lt; 80%" style="-fx-font-size: 11px;" />
               </HBox>
               <Label text=" Les vitesses varient en temps réel!" style="-fx-font-size: 10px; -fx-font-style: italic; -fx-padding: 5 0 0 0;" />
            </VBox>
         </VBox>
      </HBox>
   </center>
   
   <bottom>
      <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;" VBox.vgrow="ALWAYS">
         <Label text=" Résultats" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
         <ScrollPane fitToWidth="true" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;">
            <TextArea fx:id="resultsArea" prefHeight="200" wrapText="true" editable="false"
                      style="-fx-background-color: white; -fx-control-inner-background: white;" />
         </ScrollPane>
      </VBox>
   </bottom>
</BorderPane>